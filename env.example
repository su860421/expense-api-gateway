# API Gateway 環境變數配置範例

# 應用程式配置
APP_NAME=expense-api-gateway
APP_VERSION=1.0.0
APP_PORT=8088
APP_MODE=release

# 日誌配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=24h

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GLOBAL_LIMIT=1000
RATE_LIMIT_IP_LIMIT=100
RATE_LIMIT_USER_LIMIT=200

# 監控配置
MONITOR_ENABLED=true
MONITOR_METRICS_PATH=/metrics
PROMETHEUS_ENABLED=true

# CORS 配置
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_MAX_AGE=86400

# 服務發現配置
DISCOVERY_TYPE=static
DISCOVERY_INTERVAL=30s
DISCOVERY_TIMEOUT=5s

# 微服務配置
USER_SERVICE_HOST=localhost
USER_SERVICE_PORT=8081
EXPENSE_SERVICE_HOST=localhost
EXPENSE_SERVICE_PORT=8082
APPROVAL_SERVICE_HOST=localhost
APPROVAL_SERVICE_PORT=8083
FINANCE_SERVICE_HOST=localhost
FINANCE_SERVICE_PORT=8084
FILE_SERVICE_HOST=localhost
FILE_SERVICE_PORT=8085
AI_SERVICE_HOST=localhost
AI_SERVICE_PORT=8086
NOTIFICATION_SERVICE_HOST=localhost
NOTIFICATION_SERVICE_PORT=8087

# 資料庫配置（可選）
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gateway_db
DB_USERNAME=postgres
DB_PASSWORD=password
DB_SSL_MODE=disable

# Redis 配置（可選）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0 